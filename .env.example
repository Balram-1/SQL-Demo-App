# Example env file for local demo (do NOT commit secrets in real projects)
# Copy this to .env and fill values as needed before running the app.

# Session secret for express-session (set to a strong value for repeatable demo runs)
SESSION_SECRET=replace_this_with_a_long_random_string

# Demo mode: 'on' = vulnerable mode (educational), 'off' = secure mode
VULN_MODE=on

# Seed passwords: if set, the seeded users will use these passwords.
# If omitted, the app generates random passwords at runtime and prints them to console.
SEED_ADMIN_PASSWORD=
SEED_ALICE_PASSWORD=
SEED_BOB_PASSWORD=

# Optional: control reset confirmation phrase
RESET_CONFIRM_PHRASE=RESET DEMO
